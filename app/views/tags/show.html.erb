<div class="page-header">
  <h3>Tag #<%= @tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Tag name</dt>
      <dd><%= @tag.tag_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tags" class="btn btn-primary">
        Back
      </a>
      <a href="/tags/<%= @tag.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tag/<%= @tag.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Tag has many restaurants_and_tags -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Restaurants_and_tags
      </li>

      <% @tag.restaurants_and_tags.each do |restaurants_and_tag| %>
        <li class="list-group-item">
          <a href="/restaurants_and_tags/<%= restaurants_and_tag.id %>">
            <%= restaurants_and_tag.restaurant_id %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Tag has many restaurants -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Restaurants
      </li>

      <% @tag.restaurants.each do |restaurant| %>
        <li class="list-group-item">
          <a href="/restaurants/<%= restaurant.id %>">
            <%= restaurant.name %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
