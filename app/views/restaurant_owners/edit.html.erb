<!-- Validation failure messages -->
<% if @restaurant_owner.errors.any? %>
  <% @restaurant_owner.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurant Owner #<%= @restaurant_owner.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurant_owner/<%= @restaurant_owner.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :firstname, @restaurant_owner.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @restaurant_owner.restaurant_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Restaurant Owner
      </button>
      or
      <a href="/restaurant_owners/<%= @restaurant_owner.id %>">Cancel</a>
    </form>
  </div>
</div>
