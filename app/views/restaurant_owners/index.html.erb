<div class="page-header">
  <h1>
    Restaurant owners
    <a href="/restaurant_owners/new" class="btn btn-lg btn-success">New Restaurant owner</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Restaurant</th>
        <th>Actions</th>
      </tr>

      <% @restaurant_owners.each do |restaurant_owner| %>
      <tr>
        <td><%= restaurant_owner.user.firstname %></td>
        <td><%= restaurant_owner.restaurant_id %></td>
        <td>
          <a href="/restaurant_owners/<%= restaurant_owner.id %>" class="btn btn-primary">Show</a>
          <a href="/restaurant_owners/<%= restaurant_owner.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_restaurant_owner/<%= restaurant_owner.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
